<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ceibasoft">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ceibasoft"
        android:usesCleartextTraffic="true"
        >
        <activity android:name=".user.list.UserListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.detail.UserDetailActivity"
            android:parentActivityName=".user.list.UserListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".user.list.UserListActivity" />
        </activity>
    </application>

</manifest>